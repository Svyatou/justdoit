<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".33">

        <RadioGroup
            android:id="@+id/radioGrp"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radioBtnmiass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Miass" />

            <RadioButton
                android:id="@+id/radioBtnmoscow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Moscow" />

            <RadioButton
                android:id="@+id/radioBtnchelyabinsk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Chelyabinsk" />

            <RadioButton
                android:id="@+id/radioBtnekaterinburg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ekaterinburg" />

        </RadioGroup>

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="103dp"
            android:textSize="54sp"
            ></TextClock>

        <EditText
            android:id="@+id/editTxt"
            android:layout_width="203dp"
            android:layout_height="21dp"
            android:layout_below="@+id/radioGrp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnsend"
            android:layout_width="106dp"
            android:layout_height="26dp"
            android:layout_below="@+id/editTxt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="69dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".33">

        <CheckBox
            android:id="@+id/checkBxtint"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="21dp"
            android:text="Tint" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBxtranspatency"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="88dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="82dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <CheckBox
            android:id="@+id/checkBxresize"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBxtint"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="21dp"
            android:text="Resize" />

        <CheckBox
            android:id="@+id/checkBxtranspatency"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBxresize"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="21dp"
            android:text="Transparency" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".33">

        <Switch
            android:id="@+id/switch1"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="41dp"
            android:text="Switch" />

        <TextView
            android:id="@+id/gettxtView"
            android:layout_width="179dp"
            android:layout_height="281dp"
            android:layout_below="@+id/switch1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:text="TextView" />
    </RelativeLayout>
</LinearLayout>